<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>ru.taximaxim.codeKeeper</groupId>
        <artifactId>ru.taximaxim.codeKeeper</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../ru.taximaxim.codeKeeper/</relativePath>
    </parent>

    <groupId>ru.taximaxim.codeKeeper</groupId>
    <artifactId>ru.taximaxim.codekeeper.updatesite</artifactId>
    <version>3.11.2-SNAPSHOT</version>
    <packaging>eclipse-repository</packaging>

    <properties>
        <current_version_dir>p2/codekeeperplugins</current_version_dir>
        <old_version_dirs>p2/codekeeperplugins-old-versions/</old_version_dirs>
        <nightly_version_dir>p2/codekeeper-nightly</nightly_version_dir>
        <public.current_version_dir>release</public.current_version_dir>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-p2-repository-plugin</artifactId>
                <version>${tycho.version}</version>
                <configuration>
                    <repositoryName>pgCodeKeeper</repositoryName>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deploy-site</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>wagon-maven-plugin</artifactId>
                        <version>1.0</version>
                        <executions>
                            <execution>
                                <id>clean-updatesite</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>sshexec</goal>
                                </goals>
                                <configuration>
                                    <url>scp://codekeeper@storage.chelny.taximaxim.ru/home/codekeeper/webroot/${current_version_dir}</url>
                                    <commands>
                                        <command>rm -rf /home/codekeeper/webroot/${current_version_dir}/*</command>
                                    </commands>
                                </configuration>
                            </execution>
                            <execution>
                                <id>upload-updatesite</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                                <configuration>
                                    <url>scp://codekeeper@storage.chelny.taximaxim.ru/home/codekeeper/webroot/${current_version_dir}</url>
                                    <fromDir>${project.build.directory}/repository</fromDir>
                                    <includes>*/**</includes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>version-history-updatesite</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>sshexec</goal>
                                </goals>
                                <configuration>
                                    <url>scp://codekeeper@storage.chelny.taximaxim.ru/home/codekeeper/webroot/${current_version_dir}</url>
                                    <commands>
                                        <command>rm -rf /home/codekeeper/webroot/${old_version_dirs}/${unqualifiedVersion}.${buildQualifier}</command>
                                        <command>mkdir /home/codekeeper/webroot/${old_version_dirs}/${unqualifiedVersion}.${buildQualifier}</command>
                                        <command>cp -r /home/codekeeper/webroot/${current_version_dir}/* /home/codekeeper/webroot/${old_version_dirs}/${unqualifiedVersion}.${buildQualifier}</command>
                                    </commands>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>deploy-site-public</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>wagon-maven-plugin</artifactId>
                        <version>1.0</version>
                        <executions>
                            <execution>
                                <id>public-version-history-updatesite</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>sshexec</goal>
                                </goals>
                                <configuration>
                                    <url>scp://jenkins@10.84.0.21/var/www/pgcodekeeper/update/</url>
                                    <commands>
                                        <command>rm -rf /var/www/pgcodekeeper/update/${unqualifiedVersion}.${buildQualifier}</command>
                                        <command>mkdir /var/www/pgcodekeeper/update/${unqualifiedVersion}.${buildQualifier}</command>
                                    </commands>
                                </configuration>
                            </execution>
                            <execution>
                                <id>public-upload-updatesite</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                                <configuration>
                                    <url>scp://jenkins@10.84.0.21/var/www/pgcodekeeper/update/${unqualifiedVersion}.${buildQualifier}</url>
                                    <fromDir>${project.build.directory}/repository</fromDir>
                                    <includes>*/**</includes>
                                </configuration>
                            </execution>
                            <execution>
                                <id>public-link-current-updatesite</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>sshexec</goal>
                                </goals>
                                <configuration>
                                    <url>scp://jenkins@10.84.0.21/var/www/pgcodekeeper/update/</url>
                                    <commands>
                                        <command>unlink /var/www/pgcodekeeper/update/${public.current_version_dir}</command>
                                        <command>ln -s /var/www/pgcodekeeper/update/${unqualifiedVersion}.${buildQualifier} /var/www/pgcodekeeper/update/${public.current_version_dir}</command>
                                    </commands>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <profile>
            <id>nightly</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>wagon-maven-plugin</artifactId>
                        <version>1.0</version>
                        <executions>
                            <execution>
                                <id>execute-test-commands</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>sshexec</goal>
                                </goals>
                                <configuration>
                                    <url>scp://codekeeper@storage.chelny.taximaxim.ru/home/codekeeper/webroot/${nightly_version_dir}</url>
                                    <commands>
                                        <command>rm -rf /home/codekeeper/webroot/${nightly_version_dir}/*</command>
                                    </commands>
                                </configuration>
                            </execution>
                            <execution>
                                <id>upload-p2-repo</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>upload</goal>
                                </goals>
                                <configuration>
                                    <fromDir>${project.build.directory}/repository</fromDir>
                                    <includes>*/**</includes>
                                    <url>scp://codekeeper@storage.chelny.taximaxim.ru/home/codekeeper/webroot/${nightly_version_dir}</url>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>